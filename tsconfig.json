{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,

		"rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,


  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}